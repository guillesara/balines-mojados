<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<link rel="stylesheet" href="<%= getFile('admin/css/style.css') %>">
	<link rel="stylesheet" href="<%= getFile('admin/css/dashboard.css') %>">
    <title>Balines Mojados</title>
</head>
<body>
    <section id="sidebar">
		<a href="#" class="brand">

			<span class="text">BALINES MOJADOS</span>
		</a>
		<ul class="side-menu top">
			<li>
				<a href="/admin">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Panel</span>
				</a>
			</li>
			<li>
				<a href="/admin/reserves/create">
					<i class='bx bxs-shopping-bag-alt' ></i>
					<span class="text">Crear turno</span>
				</a>
			</li>
			<li>
				<a href="/admin/reserves">
					<i class='bx bxs-message-dots' ></i>
					<span class="text">Ver turnos</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="/" >
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Home</span>
				</a>
				<a href="/api/logout" class="logout">
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Cerrar Sesion</span>
				</a>
			</li>
		</ul>
	</section>
	<section id="content">
		<nav>
			<i class='bx bx-menu' ></i>
			<!-- <form action="#">
				<div class="form-input">
					<input type="search" placeholder="Buscar...">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
				</div>
			</form> -->
		</nav>

		<main>
			<% if (typeof content != "undefined") { %>
				<%- include('views/' + content) %>
			<% } %>
		</main>
	</section>

	<% if (typeof alert != "undefined") { %>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            Swal.fire({
                title: "<%= alert.title %>",
                text: "<%= alert.message %>",
                icon: "<%= alert.icon %>",
                showConfirmButton: "<%= alert.showConfirmButton %>",
                confirmButtonColor: "#28a745",
                timer: "<%= alert.time %>",
            }).then(() => {
                window.location = "/<%= alert.ruta %>"
            })
        </script>
    <% } %>
    <script src="<%= getFile('admin/js/dashboard.js') %>"></script>
</body>
</html>